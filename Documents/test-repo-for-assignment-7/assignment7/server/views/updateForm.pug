          option(value='2023', selected=food.expirationYear == '2023') 2023
          option(value='2024', selected=food.expirationYear == '2024') 2024
        br
        br
        label Quantity
        br
        input(type='number', name='quantity', min='0', value=food.quantity)
        br
        br
        label Location
        br
        br
        input(type='radio', name='location', value='pantry', checked=food.location == 'pantry')
        | Pantry
        br
        input(type='radio', name='location', value='refrigerator', checked=food.location == 'refrigerator')
        | Refrigerator
        br
        input(type='radio', name='location', value='freezer', checked=food.location == 'freezer')
        | Freezer
        br
        br
      input(type='submit', value='Update item', name='button')
