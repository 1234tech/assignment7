          option(value='25', selected=food.expirationDay == '25') 25
          option(value='26', selected=food.expirationDay == '26') 26
          option(value='27', selected=food.expirationDay == '27') 27
          option(value='28', selected=food.expirationDay == '28') 28
          option(value='29', selected=food.expirationDay == '29') 29
          option(value='30', selected=food.expirationDay == '30') 30
          option(value='31', selected=food.expirationDay == '31') 31
        select(name='expirationYear')
          option(value='', selected=true)
          option(value='2019', selected=food.expirationYear == '2019') 2019
          option(value='2020', selected=food.expirationYear == '2020') 2020
          option(value='2021', selected=food.expirationYear == '2021') 2021
